#ifndef SST_SST_MUTEX_H
#define SST_SST_MUTEX_H

#include <sst/sst_status.h>

#define SST_MUTEX_IMP_NULL              (    0)
#define SST_MUTEX_IMP_POSIX             (    1)
#define SST_MUTEX_IMP_WINDOWS           (    2)

#define SST_MUTEX_IMP @SST_MUTEX_IMP@

struct sst_mutex_attr;

sst_status sst_mutex_attr_create(
  struct sst_mutex_attr * *
);

sst_status sst_mutex_attr_destroy(
  struct sst_mutex_attr *
);

struct sst_mutex;

sst_status sst_mutex_create(
  struct sst_mutex * *,
  struct sst_mutex_attr *
);

sst_status sst_mutex_destroy(
  struct sst_mutex *
);

sst_status sst_mutex_lock(
  struct sst_mutex *
);

sst_status sst_mutex_unlock(
  struct sst_mutex *
);

#endif
